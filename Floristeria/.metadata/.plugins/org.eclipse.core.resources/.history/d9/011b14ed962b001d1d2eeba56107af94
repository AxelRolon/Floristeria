				System.out.println("❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃❃");
				String nom = sc.next();
				new Floristeria(nom);
				break;
			}
			case 2: {
				 Floristeria arb = new Floristeria();//instanciacion nueva, iniciado con el constructor por defecto "no recibe parametros"
				 arb.crearArbol();
				 break;
			}
				
			}
			
		} while (usr!=0);
		
	}
}
